{% extends "WabboxLettreBundle:Default:index.html.twig" %}  
    {% block containt %}
<h3>Contenu</h3>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Objet</th>
            <td>{{ entity.objet }}</td>
        </tr>
        <tr>
            <th>Message</th>
            <td>{{ entity.message }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('contenu') }}">
            Retour Ã  liste
        </a>
    </li>
    <li>
        <a href="{{ path('contenu_edit', { 'id': entity.id }) }}">
            Modifier
        </a>
    </li>
    <li>
        <form action="{{ path('contenu_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit" class="button radius">Supprimer</button>
        </form>
    </li>
</ul>
{% endblock %}