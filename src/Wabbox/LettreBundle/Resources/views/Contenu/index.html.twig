{% extends "WabboxLettreBundle:Default:index.html.twig" %}  
    {% block containt %}
<h3>Contenu list</h3>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Objet</th>
            <th>Message</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('contenu_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.objet }}</td>
            <td>{{ entity.message }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('contenu_show', { 'id': entity.id }) }}">Voir</a>
                    </li>
                    <li>
                        <a href="{{ path('contenu_edit', { 'id': entity.id }) }}">Modifier</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

