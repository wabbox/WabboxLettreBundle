{% extends "::base.html.twig" %}
{% block title %}Perrin Gontran{% endblock %}
{% block layout %}
<div id="root">
  <div class="row">
    <div class="contain-to-grid fixed">
      <nav class="top-bar">
        <ul>
          <!-- Title Area -->
          <li class="name">
            <h1>
              <a href="{{ path('wabbox_cv_homepage') }}">
                {% block title_nav %}{% endblock %}</a>
              </h1>
            </li>
            <li class="toggle-topbar"><a href="#"></a></li>
          </ul>
          <section>
            <!-- left Nav Section -->
            <ul class="left">
              <li class="divider"></li>
              <li><a href="{{ path('wabbox_cv_presentation') }}">Présentation</a></li>
              <li><a href="{{ path('wabbox_cv_competence') }}">Compétences</a></li>
              <li><a href="{{ path('contact') }}">Contact</a></li>
              <li class="divider"></li>
            </ul>
            <!-- right Nav Section -->
            <ul class="right">
              <li class="divider"></li>
              {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
              <li class="dropdown">
                <a href="#">Connecté en tant que {{ app.user.username }}</a>
              </li>
              <li class="divider"></li>
              {% endif %}
              <li class="dropdown">
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                <a href="{{ path('fos_user_security_logout') }}">Déconnexion</a>
                {% else %}
                <a href="{{ path('fos_user_security_login') }}">Connexion</a>
                {% endif %}
              </li>
              <li class="divider hide-for-small"></li>
            </ul>

          </section>
        </nav>
      </div>
    </div>
    {% block body %}
    {% endblock %}
    <div id="root_footer"></div>
  </div>
  <footer id='footer'>
    <p>&copy; Conçu par Perrin Gontran</p>
    <ul>
      <li>Réalisé avec les éléments suivant :</li>
      <li><a href="http://symfony.com/" title="Symfony" target="_blank">Symfony</a></li>
      <li><a href="http://compass-style.org/" title="Compass" target="_blank">Compass</a></li>
      <li><a href="http://foundation.zurb.com/" title="Foundation" target="_blank">Foundation</a></li>
    </ul>
  </footer>

  {% endblock %}